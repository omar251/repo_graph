{
  "name": "repo-dependency-graph",
  "version": "2.0.0",
  "description": "A powerful tool for analyzing and visualizing code dependencies in JavaScript and Python projects",
  "main": "src/index.js",
  "bin": {
    "repo-graph": "./src/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "analyze": "node src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "serve": "python -m http.server 8000",
    "server": "node server.js",
    "build": "npm run lint && npm run test",
    "dev": "nodemon src/index.js",
    "clean": "rimraf .depgraph/cache coverage",
    "docs": "jsdoc src -r -d docs",
    "example:js": "node src/index.js example",
    "example:python": "node src/index.js example_python"
  },
  "keywords": [
    "dependency-analysis",
    "code-visualization",
    "network-graph",
    "javascript",
    "python",
    "typescript",
    "static-analysis",
    "dependency-graph",
    "code-quality",
    "refactoring"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "eslint": "^8.0.0",
    "nodemon": "^3.0.0",
    "rimraf": "^5.0.0",
    "jsdoc": "^4.0.0",
    "@jest/globals": "^29.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/repo-dependency-graph.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/repo-dependency-graph/issues"
  },
  "homepage": "https://github.com/your-username/repo-dependency-graph#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "indent": ["error", 4],
      "linebreak-style": ["error", "unix"],
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "no-console": "warn"
    }
  },
  "depgraph": {
    "excludePatterns": [
      "node_modules/**",
      ".git/**",
      "dist/**",
      "build/**",
      "coverage/**",
      "docs/**"
    ],
    "includeExternal": false,
    "cache": {
      "enabled": true,
      "maxAge": 86400000
    },
    "logging": {
      "level": "info",
      "verbose": false
    }
  }
}